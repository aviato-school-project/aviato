@model Aviato.Models.Avion

@{
    ViewBag.Title = "Servis aviona";
}

<h2>Servis aviona</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Avion</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AvionId)

        <div class="form-group">
            @Html.LabelFor(model => model.SifraAviona, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.DisplayFor(model => model.SifraAviona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SifraAviona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GodinaProizvodnje, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.DisplayFor(model => model.GodinaProizvodnje, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GodinaProizvodnje, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="izvestaj" class="control-label col-md-5">Izveštaj</label>
            <div class="col-md-7">
                @Html.TextArea("Uneti izveštaj")
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ServisniStatus, "Na servisu", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ServisniStatus)
                    @Html.ValidationMessageFor(model => model.ServisniStatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipAviona, "TipAviona", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Tip.NazivTipa)
                @*@Html.EditorFor(model => model.Tip.NazivTipa, new { @style = "visibility: hidden"})*@
                @Html.ValidationMessageFor(model => model.TipAviona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Potvrdi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
