<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />


@model Aviato.Models.RegisterViewModel
@* Mehaničar create *@

<h4>Unos licenci za mehaničara</h4>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div>
    <div class="ovdedodaj">

        @Html.LabelFor(model => model.Mehanicar.Licenca, "Licenca", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.LabelFor(model => model.Mehanicar.DatumLicence, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-left: 100px" })
        <div class="form-group col-md-10 target">
            @Html.DropDownListFor(model => model.Mehanicar.Licenca, new SelectList(ViewBag.Licenca, "Value", "Text"), "Izaberi ", new { @class = "form-control izabranaLicenca", @style = "display: inline-block" })
            @Html.ValidationMessageFor(model => model.Mehanicar.Licenca, "", new { @class = "text-danger", @style = "padding-right: 20px" })

            @Html.EditorFor(model => model.Mehanicar.DatumLicence, new { htmlAttributes = new { @class = "form-control izabraniDatum input-group date datetimepicker3", id="datetimepicker3", @style = "display: inline-block" } })
            @Html.ValidationMessageFor(model => model.Mehanicar.DatumLicence, "", new { @class = "text-danger" })

            <input type="hidden" name="TipoviZaUnos" id="TipoviZaUnos" value="" />
            <input type="hidden" name="DatumiZaUnos" id="DatumiZaUnos" value="" />

            <span class="fas fa-minus-circle"></span><span class="fas fa-plus-circle"></span>
        </div>
    </div>
</div>
<script src="~/Scripts/plus.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/MehanicariUnos.js"></script>

<script type="text/javascript">
    $(function () {
        $('.datetimepicker3').datetimepicker({
            format: 'M/DD/YYYY'
        });
    });

    $('.fa-plus-circle').on("click", function () {
        $('.datetimepicker3').datetimepicker({
            format: 'M/DD/YYYY'
        });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
