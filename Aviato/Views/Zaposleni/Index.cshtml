@model IEnumerable<Aviato.ViewModels.ZaposleniSRolom> 

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Unesi novog zaposlenog", "Register", "Account")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImeIPrezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pozicija)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImeIPrezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pozicija)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ZaposleniId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ZaposleniId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ZaposleniId })
        </td>
    </tr>
}

</table>
