@model Aviato.Models.Zaposleni

@{
    ViewBag.Title = "Detalji";
}

<h2>Podaci o zaposlenom</h2>

<div>
    <h4>@ViewBag.Pozicija</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.Ime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prezime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prezime)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @ViewBag.Email
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GodinaRodjenja)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GodinaRodjenja)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JMBG)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JMBG)
        </dd>
        @if (ViewBag.Pozicija == "Pilot")
        {
            <hr />
            <dt>
                Poslednji medicinski pregled
            </dt>

            <dd>
                @ViewBag.Detalji.PoslednjiMedicinski
            </dd>

            <dt>
                Ocena zdravstvenog stanja
            </dt>

            <dd>
                @if (@ViewBag.Detalji.OcenaZS)
                {
                    <p>Sposoban</p>
                }
                else
                {
                    <p>Prizemljen</p>
                }
            </dd>

            <dt>
                Sati letenja
            </dt>

            <dd>
                @ViewBag.Detalji.SatiLetenja
            </dd>
        }

        @if (ViewBag.Pozicija == "Stjuard")
        {
            <hr />
            <dt>
                Govori jezike
            </dt>

            <dd>
                @foreach (var jezik in ViewBag.Detalji)
                {
                    <ul>
                        <li>@jezik</li>
                    </ul>
                }

            </dd>
        }

        @if (ViewBag.Pozicija == "Mehaničar")
        {
            <hr />
            @*@{
                var test = ViewBag.Detalji;
            }*@

                foreach (var licenca in ViewBag.Detalji)
                {
                <dt>
                    Liceniran za
                </dt>

                <dd>
                    @licenca.Tip.NazivTipa
                </dd>

                <dt>
                    Na dan
                </dt>

                <dd>
                    @licenca.DatumLicence
                </dd>
                }

        }

        @*<dt>
            @Html.DisplayNameFor(model => model.IdentityId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdentityId)
        </dd>*@

    </dl>
</div>
<hr />
<p>
    @Html.ActionLink("Izmeni", "Edit", new { id = Model.ZaposleniId }) |
    @Html.ActionLink("Nazad na spisak zaposlenih", "Index") |
    @Html.ActionLink("Obriši", "Delete", new { id = Model.ZaposleniId })
</p>
